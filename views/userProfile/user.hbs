<script src="/javascript/axios.js"></script>




{{> layouts/navbar}}


<div class="container-fluid-xl" id="container">
	<div class="row">
		<div class="col-sm-4">
			<div class="sidenav" id="section--profile">
				<div class="container">
					<div class='dropdown' id="profile--dropdown">
							<button type='button' class='' data-toggle='dropdown'>Nastavení</button>
							<div class='dropdown-menu dropdown-menu-right'>
								<a class='dropdown-item' href='/account/edit/{{profile.id}}'>Upravit profil</a>
								<a class='dropdown-item' href='/account/info'>Upravit info</a>
							</div>
						</div>
					<div class="profile--wrap">
					<img
						class='avatar'
						src='/Avatars/{{userdata.file_src}}'
						alt='User avatar'
					/>
						<div class="profile--wrap__name">
							<h4>{{userdata.firstname}} {{userdata.lastname}}</h4> 
							<h4>@{{userdata.username}}</h4>
						</div>
						
					</div>
					<div class="profile--stats">
						<div class="profile--stats__stat" >
							<p class="number-stat">{{followersCounts.followersCount}}</p>
							<p class="desc-stat">Sledující</p>
						</div>
						<div class="profile--stats__stat">
							<p class="number-stat">{{followingCounts.followingCount}}</p>
							<p class="desc-stat">Sleduji</p>
						</div>
						<div class="profile--stats__stat">
							<p class="number-stat">{{postCounts.postCount}}</p>
							<p class="desc-stat">Příspěvky</p>
						</div>
					</div>
					<hr>
					<div class="user--info">
						<p>bio: {{profile.bio}}</p>
						<p>Kraj: {{profile.name}}</p>
					</div>
					<button onclick="followUser({{userdata.id}})" id="follow">follow</button>
					<button onclick="unfollowUser({{userdata.id}})">unfollow</button>

				</div>
			</div>
			</div>
				<div class="col-sm-8">
			<div class="" id="section--posts">
				<div class="container">
				{{>post-add}}
				<hr />
							{{#each posts}}
					<div class='post--wrap'>
						<div class='post--header'>
							<figure>
								<img class='comment-avatar' src='/Avatars/{{this.file_src}}' alt='' />
							</figure>
							<div class='post--header__sub'>
								<h5>
									<span class='glyphicon glyphicon-time'></span>
									{{this.username}},
									<br />
									{{this.created_at}}.
								</h5>
							</div>
						</div>
						<p class='comment--text'>
							{{this.content}}
						</p>
						<div class='counter'>
							<div class="likes" id="clicks">
								{{this.likes}}
							</div>
							<div class="comments">
								{{this.comments}}
							</div>
						</div>
						<hr />
						<div class='post--links'>
							<button id='likeBtn' onclick='likePost({{this.post_id}})'><i
									class='fa-solid fa-thumbs-up'
								></i>To se mi líbí</button>
							<button onclick='viewComments({{this.post_id}})'>
								<i class='fa-solid fa-comments'></i>Komentáře
							</button>

						<p id="demo"></p>


						</div>
						<hr />
						<form
							action='/posts/comment/{{this.post_id}}'
							method='POST'
							name='comment--text'
						>
							<input
								type='text'
								class='comment--input'
								name='commentText'
								id='commentText'
								placeholder='Okomentujte'
							/>
						</form>

						<hr />

					</div>
					{{/each}}
				<div class="comment--text">
			{{#each comments}}
				{{this.post_id}}
			{{/each}}
		</div>
			</div>
		</div>
	</div>
</div>
</div>
</div>




