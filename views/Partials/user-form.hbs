<div class='container'>
	<br /><br /><br /><br />

	<div class='row justify-content-center'>
		<div class='col-md-10'>

			<!-- Register formulář -->
			<form action='/admin/add' method='POST'>
				<div class='form-row'>
					<!-- Input na jméno -->
					<div class='col form-group'>
						<input
							type='text'
							class='form-control'
							placeholder='Jméno'
							name='jmeno'
						/>
					</div>
					<!-- Input na příjmení -->
					<div class='col form-group'>

						<input
							type='text'
							class='form-control'
							placeholder='Přijmení '
							name='prijmeni'
						/>
					</div>
				</div>
				<!-- Input pro přezdívku -->
				<div class='form-row'>
					<div class='col form-group'>

						<input
							type='text'
							class='form-control'
							placeholder='Přezdívka'
							name='prezdivka'
						/>
					</div>
				</div>
				<!-- Input pro email -->
				<div class='form-group'>
					<input
						type='email'
						class='form-control'
						placeholder='Email'
						name='email'
					/>
				</div>
				<!-- input pro heslo -->
				<div class='form-group'>
					<input
						class='form-control'
						type='password'
						placeholder='Heslo'
						name='heslo'
					/>
				</div>
				<div class='form-group'>
					<button type='submit' class='btn btn-block'>
						Přidat uživatele
					</button>
				</div>
				{{message}}
			</form>

		</div>

	</div>

</div>

<br /><br />