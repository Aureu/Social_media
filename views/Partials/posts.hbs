{{#each posts}}
	<div class="post--wrap">
		<div class="post--header">
		<figure>
			<img class="comment-avatar" src="/Avatars/{{../profile.file_src}}" alt="" >
		</figure>
		<div class="post--header__sub">
			<h5>
				<span class="glyphicon glyphicon-time"></span> {{this.username}}, <br>
				{{this.created_at}}.
			</h5>
		</div>
		</div>
		<p class="comment--text">
			{{this.content}}
		</p>
		
		<button onclick="likePost({{this.post_id}})">Like</button>
		{{this.likes}}
		<button onclick="deletePost({{this.post_id}})">Delete</button>
		<hr>
		<form action="/posts/comment/{{this.post_id}}" method="POST" name="comment--text">
			<input type="text" class="comment--input" name="commentText" id="commentText" placeholder="Okomentujte">
		</form>
		<button  onclick="viewComments({{this.post_id}})">
			Komentáře
		</button>
		<hr>
		
	</div>
{{/each}}