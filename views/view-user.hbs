<nav aria-label='breadcrumb'>
	<ol class='breadcrumb'>
		<li class='breadcrumb-item'><a href='/admin/user_list'>Domů</a></li>
		<li class='breadcrumb-item active' aria-current='page'>Zobrazení uživatele</li>
	</ol>
</nav>

<div class='view-user p-5'>
	{{#each rows}}
		<div class='row mb-5'>
			<div class='col text-center'>
				<h3>{{this.first_name}} {{this.last_name}}</h3>
			</div>
		</div>
		<div class='row'>
			<div class='col'>
				<table class='table'>
					<thead>
						<tr>
							<th scope='col'>Jméno</th>
							<th scope='col'>Přijmení</th>
							<th scope='col'>Přezdívka</th>
							<th scope='col'>Email</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope='row'>{{this.Jmeno}}</th>
							<td>{{this.prijmeni}}</td>
							<td>{{this.prezdivka}}</td>
							<td>{{this.email}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	{{/each}}
</div>