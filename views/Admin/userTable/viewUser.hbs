<nav aria-label='breadcrumb'>
	<ol class='breadcrumb'>
		<li class='breadcrumb-item'><a href='/admin/users'>Domů</a></li>
		<li class='breadcrumb-item active' aria-current='page'>Zobrazení uživatele</li>
	</ol>
</nav>

<div class='view-user p-5'>
	<div class='row mb-5'>
		<div class='col text-center'>
			<h3>{{this.jmeno}} {{this.prijmeni}}</h3>
		</div>
	</div>
	<div class='row'>
		<div class='col'>
			<table class='table table-dark'>
				<thead>
					<tr>
						<th scope='col'>Jméno</th>
						<th scope='col'>Přijmení</th>
						<th scope='col'>Přezdívka</th>
						<th scope='col'>Email</th>
					</tr>
				</thead>
				<tbody>
					{{#each user}}
						<tr>
							<th scope='row'>{{this.jmeno}}</th>
							<td>{{this.prijmeni}}</td>
							<td>{{this.prezdivka}}</td>
							<td>{{this.email}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>

</div>