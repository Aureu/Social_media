<section class='ftco-section pt-5'>
	<nav>
		<div class='wrap'>

		</div>

		<ul class='nav__link--list'>
			<li>
				<a
					href='/admin/users/'
					class='nav__link--anchor link__hover-effect link__hover-effect--black'
				>Users</a>
			</li>
			<li>
				<a
					href='/admin/posts'
					class='nav__link--anchor link__hover-effect link__hover-effect--black'
				>Posts</a>
			</li>

			<li>
				<a
					href='/logout'
					class='nav__link--anchor-primary link__hover-effect link__hover-effect--black'
				>LOGOUT</a>
			</li>
		</ul>
	</nav>
	<div class='container'>
		<div class='row'>
			<div class='col-6'>
				<h1>Uživatelé</h1>
			</div>

		</div>
		<div class='row'>
			<div class='col-md-12'>
				<div class='table-wrap'>
					<table class='table table-dark table-hover'>
						<thead>
							<tr>
								<th scope='col'>#</th>
								<th scope='col'>Username</th>
								<th scope='col'>Content</th>
								<th scope='col'>createdAt</th>
								<th scope='col'>Action</th>
							</tr>
						</thead>
						<tbody>
							<!-- Tabulka do které se vkládají uživatelé z databáze -->
							{{#each posts}}
								<tr>
									<th scope='row'>{{this.id}}</th>
									<td>{{this.username}}</td>
									<td>{{this.content}}</td>
									<td>{{this.created_at}}</td>
									<td class='text-end'>

										<a
											href='/admin/posts/delete/{{this.id}}'
											type='button'
											class='btn'
										><i class='bi bi-person-x'></i> Smazat</a>
									</td>
								</tr>
							{{/each}}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>