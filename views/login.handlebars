<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Login</h3>
        </div>
        <div class="panel-body">
          <!--Start of form-->
          <form role="form" action="/auth/login" method="POST">
            <div class="form-group">
              <!-- Input for an email -->
              <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
            </div>
            <div class="form-group">
              <!-- Input for a password -->
              <input type="password" name="pass" id="pass" class="form-control input-sm" placeholder="Password">
            </div>
            <!-- Handlebar output for errors(passwords dont match etc.) -->
            <h4>{{message}}</h4>
            <div class="form-group">
              <input type="submit" value="Login" class="btn btn-info btn-block"><br>
              <a href="/register" class="">Create new account</a>
            </div>
        </div>
        <!--End of the form-->
        </form>

      </div>
    </div>
  </div>
</div>