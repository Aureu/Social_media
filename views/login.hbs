<div class='container'>
	<br />

	<div class='row justify-content-center'>
		<div class='col-md-6'>
			<div class='card'>
				<!-- Button na přesměrování na signup page-->
				<header class='card-header'>
					<a
						href='/user/register'
						class='float-right btn btn-outline-primary mt-1'
					>Zaregistrovat se</a>
					<h4 class='card-title mt-2'>Přihlásit se</h4>
				</header>
				<article class='card-body'>
					<!-- login form -->
					<form action='/user/login' method='POST'>
						<!-- input pro email -->
						<div class='form-group'>
							<label>Email</label>
							<input
								type='email'
								class='form-control'
								placeholder=''
								name='email'
								id='email'
							/>
						</div>
						<!-- form-group end.// -->
						<!-- Input pro heslo -->
						<div class='form-group'>
							<label>Heslo</label>
							<input
								class='form-control'
								type='password'
								name='password'
								id='password  '
							/>
						</div>
						<!-- form-group end.// -->
						<div class='form-group'>
							<button type='submit' class='btn btn-primary btn-block'>
								Login
							</button>
						</div>
						<!-- form-group// -->

					</form>
				</article>
				<!-- card-body end .// -->
				<div class='border-top card-body text-center'>Nemáte účet?
					<a href='/user/register'>Zaregistrovat se</a></div>
			</div>
			<!-- card.// -->
		</div>
		<!-- col.//-->

	</div>
	<!-- row.//-->

</div>
<!--container end.//-->

<br /><br />