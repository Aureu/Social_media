<div class='container'>
	<br /><br /><br /><br /><br /><br />

	<div class='d-flex justify-content-center align-middle'>
		<div class='col-md-6'>
			<div class='card'>
				<!-- Button na přesměrování na signup page-->
				<header class='card-header'>
					<a
						href='/auth/signup'
						class='float-right btn btn-outline-primary mt-1'
					>Zaregistrovat se</a>
					<h4 class='card-title mt-2'>Přihlásit se</h4>
				</header>
				<article class='card-body'>
					<!-- login formulář -->
					<form action='/auth/login' method='POST'>
						<!-- input pro email -->
						<div class='form-group'>
							<label>Email</label>
							<input
								type='email'
								class='form-control'
								placeholder=''
								name='email'
								id='email'
							/>
						</div>
						<!-- Input pro heslo -->
						<div class='form-group'>
							<label>Heslo</label>
							<input
								class='form-control'
								type='password'
								name='password'
								id='password  '
							/>
						</div>
						<div class='form-group'>
							<button type='submit' class='btn btn-primary btn-block'>
								Login
							</button>
						</div>
						{{message}}
					</form>
				</article>
				<div class='border-top card-body text-center'>Nemáte účet?
					<a href='/auth/signup'>Zaregistrovat se</a></div>
			</div>
		</div>

	</div>

</div>

<br /><br />