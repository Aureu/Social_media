<div class='container'>
	<br /><br /><br /><br /><br />

	<div class='d-flex justify-content-center align-middle'>
		<div class='col-md-5'>
			<div class='card'>
				<!-- Button na přesměrování na signup page-->
				<header class='card-header'>

					<h4 class='card-title mt-2'>Přihlášení</h4>
				</header>
				<div class='card-body'>
					<!-- login formulář -->
					<form action='/login' method='POST'>
						<!-- input pro email -->
						<div class='form-group'>

							<input
								type='email'
								class='form-control'
								placeholder='Zadejte email'
								name='email'
								id='email'
								required
							/>
						</div>
						<!-- Input pro heslo -->
						<div class='form-group'>

							<input
								class='form-control'
								type='password'
								placeholder='Zadejte heslo'
								name='password'
								id='password'
								required
							/>
						</div>
						<div class='form-group'>
							<button type='submit' class='btn btn-block'>
								Přihlásit se
							</button>
						</div>
						{{#if message}}
							<div
								class='alert alert-danger alert-dismissible fade show'
								role='alert'
							>
								{{{message}}}
								<button
									type='button'
									class='close'
									data-dismiss='alert'
									aria-label='Close'
								>
									<span aria-hidden='true'>×</span>
								</button>
							</div>
						{{/if}}
					</form>
				</div>
				<div class='card-body text-center'>Nemáte účet?
					<a href='/register'>Zaregistrovat se</a></div>
			</div>

		</div>

	</div>

</div>