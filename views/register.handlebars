<div class="container">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign Up</h3>
        </div>
        <div class="panel-body">
          <!-- Start of form -->
          <form role="form" action="/auth/register" method="POST">
            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <!-- Input for a first name -->
                  <input type="text" name="fName" id="fName" class="form-control input-sm"
                    placeholder="First Name" required>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <!-- Input for a surname-->
                  <input type="text" name="lName" id="lName" class="form-control input-sm" placeholder="Last Name" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <!-- Input for an email-->
              <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address" required>              

            </div>
            <div class="form-group">
              <!-- Input for a password-->
              <input type="password" name="pass" id="pass" class="form-control input-sm" placeholder="Password" required>
            </div>

            <div class="form-group">
              <!-- Button for submitting form-->
              <input type="submit" value="Register" class="btn btn-info btn-block">

            </div>
            <!-- Link for login page-->
            <a href="login" class="">Already have an account?</a>
            {{#if message}}
              <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
        </div>
        <!-- End of the form -->
        </form>

      </div>
    </div>
  </div>
</div>