

<div class='row'>
	<div class='col-6'>
		<h1>Users</h1>
	</div>
	<div class='col-6 d-flex justify-content-end'>
		<a
			href='/admin/adduser'
			type='button'
			class='btn btn-primary align-self-center'
		>+ add user</a>
	</div>
</div>

</form>
<table class='table table-bordered'>
	<thead class='thead-dark'>
		<tr>
			<th scope='col'>#</th>
			<th scope='col'>Jméno</th>
			<th scope='col'>Přijmení</th>
			<th scope='col'>Přezdívka</th>
			<th scope='col'>Email</th>
			<th scope='col' class='text-end'>Akce</th>
		</tr>
	</thead>
	<tbody>

		{{#each rows}}
			<tr>
				<th scope='row'>{{this.user_id}}</th>
				<td>{{this.first_name}}</td>
				<td>{{this.last_name}}</td>
				<td>{{this.username}}</td>
				<td>{{this.email}}</td>
				<td class='text-end'>
					<a
						href='/admin/viewuser/{{this.user_id}}'
						type='button'
						class='btn btn-light btn-small'
					><i class='bi bi-eye'></i> Zobrazit</a>
					<a
						href='/admin/edituser/{{this.user_id}}'
						type='button'
						class='btn btn-light btn-small'
					><i class='bi bi-pencil'></i>
						Upravit</a>
					<a
						href='/admin/delete/{{this.user_id}}'
						type='button'
						class='btn btn-light btn-small'
					><i class='bi bi-person-x'></i> Smazat</a>
				</td>
			</tr>
		{{/each}}

	</tbody>
</table>