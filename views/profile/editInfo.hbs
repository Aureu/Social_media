{{> layouts/navbar}}

<div class='container'>
	<br /><br /><br /><br /><br />

	<div class='d-flex justify-content-center align-middle'>
		<div class='col-md-5'>
			<div class='card'>
				<!-- Button na přesměrování na signup page-->
				<header class='card-header col-sm'>
					<div class='row'>
						<h4 class='card-title mt-2 col-sm'>Upravit profil</h4>
						<a href='/account' class='btn btn-block editBtn col-sm'>Zpět</a>
					</div>
				</header>
				<div class='card-body'>
					<form action='/account/insert-profile-info' method='POST'>

						<textarea
							rows='3'
							name='bio'
							class='form-control'
							maxlength='100'
							placeholder='{{profile.bio}}'
						></textarea>
						<br />
						<div class='form-group'>
							<div class='form-row'>
								<select name='districts' id='districts' class='form-control'>
									{{#each districts}}
										<option
											value='{{this.district_id}}'
										>{{this.district_id}}.{{this.name}}</option>
									{{/each}}
								</select>

							</div>
						</div>
						<br />
						<div class='form-group'></div>
							<label for='date'>Zvolit datum narození:</label>
							<input
								type='date'
								name='dateBirth'
								class='form-control'
								placeholder='Vyberte datum narození'
							/>
					
						<br />

						<div class='form-group'>
							<button type='submit' class='btn btn-block'>
								Odeslat
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>