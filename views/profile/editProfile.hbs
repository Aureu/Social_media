<div class='wrap'>
	<div id='main' class='container clear-top'>
		<br /><br /><br /><br /><br />

		<div class='row justify-content-center'>
			<div class='col-md-5'>
				<div class='card'>
					<header class='card-header col-sm'>
						<div class='row'>
							<h4 class='card-title mt-2 col-sm'>Edit profile</h4>
							<a href='/account' class='btn btn-block editBtn col-sm'>Home</a>
						</div>
					</header>
					<article class='card-body'>
						<!-- Register formulář -->
						<form action='/account/edit-profile/{{profile.id}}' method='POST'>
							<div class='form-row'>
								<!-- Input na jméno -->
								<div class='col form-group'>
									<input
										type='hidden'
										id='id'
										name='id'
										value='{{profile.id}}'
									/>
									<input
										type='text'
										class='form-control'
										name='firstname'
										value='{{profile.firstname}}'
										required
									/>
								</div>
								<!-- Input na příjmení -->
								<div class='col form-group'>

									<input
										type='text'
										class='form-control'
										value='{{profile.lastname}}'
										name='lastname'
										required
									/>
								</div>
							</div>
							<!-- Input pro přezdívku -->
							<div class='form-row'>
								<div class='col form-group'>

									<input
										type='text'
										class='form-control'
										value='{{profile.username}}'
										name='username'
										required
									/>
								</div>
							</div>
							<!-- Input pro email -->
							<div class='form-group'>
								<input
									type='email'
									class='form-control'
									value='{{profile.email}}'
									name='email'
									required
								/>
							</div>
							<!-- input pro heslo -->

							<div class='form-group'>
								<button type='submit' class='btn btn-block'>
									Register
								</button>
							</div>
							<hr />
							<!-- Dodělat vypisování chyb -->
							{{message}}
						</form>
						<form
							action='/account/edit-profile/password/{{profile.id}}'
							method='POST'
						>
							<div class='form-group'>
								<input
									class='form-control'
									type='password'
									value='{{profile.hashedPassword}}'
									name='password'
									required
									min='5'
								/>
							</div>
							<div class='form-group'>
								<button type='submit' class='btn btn-block'>
									Change password
								</button>
							</div>
						</form>

					</article>
					<!-- Přesměrování na přihlašování -->
					<div class='card-body text-center'>Do you have an account?
						<a href='/login'>Login</a></div>
				</div>
			</div>

		</div>

	</div>
</div>

<br /><br />